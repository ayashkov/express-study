{
  "name": "Nx",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-18-bullseye",
  "mounts": [
    {
      "source": "home",
      "target": "/home/node",
      "type": "volume"
    }
  ],
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "nrwl.angular-console"
      ]
    },
    "jetbrains": {
      "plugins": [
        "dev.nx.console"
      ]
    }
  },
  "postCreateCommand": "npm install"
}
